// Emoji-coded diagnostics for audit hygiene and contributor clarity

function logSuccess(action, wallet, amount) {
  console.log(`‚úÖ ${action.toUpperCase()} | Wallet: ${wallet} | Amount: $${amount}`);
}

function logError(action, reason) {
  console.warn(`‚ùå ${action.toUpperCase()} FAILED | Reason: ${reason}`);
}

function logTransfer(from, to, amount) {
  console.log(`üîÅ TRANSFER | From: ${from} ‚Üí To: ${to} | Amount: $${amount}`);
}

function logInfo(message) {
  console.log(`‚ÑπÔ∏è ${message}`);
}

module.exports = {
  logSuccess,
  logError,
  logTransfer,
  logInfo
};
